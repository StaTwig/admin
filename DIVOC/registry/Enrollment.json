{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "Enrollment": {
      "allOf": [
        {"$ref": "#/definitions/Enrollment"},
        {"required": ["code", "enrollmentType"]}
      ]
    }
  },
  "required": [
    "Enrollment"
  ],
  "title":"Enrollment",
  "definitions": {
    "Enrollment": {
      "type": "object",
      "required": ["identity"],
      "properties": {
        "osid": {
          "type": "string"
        },
        "enrollmentType": {
          "type": "string",
          "enum": ["SELF_ENRL", "PRE_ENRL", "WALK_IN"]
        },
        "beneficiaryPhone" : {
          "type": "string"
        },
        "phone" : {
          "type": "string"
        },
        "nationalId": {
          "type": "string"
        },
        "identity": {
          "type": "string"
        },
        "yob": {
          "type": "integer"
        },
        "dob": {
          "type": "string",
          "format": "date"
        },
        "gender": {
          "type": "string",
          "enum": ["Male", "Female", "Other"]
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "appointments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "osid": {
                "type": "string"
              },
              "programId": {
                "type": "string",
                "x-omitempty": false
              },
              "appointmentSlot": {
                "type": "string",
                "x-omitempty": false
              },
              "appointmentDate": {
                "type": "string",
                "format": "date",
                "x-omitempty": false
              },
              "certified": {
                "type": "boolean",
                "x-omitempty": false
              },
              "enrollmentScopeId": {
                "type": "string",
                "x-omitempty": false
              },
              "vaccine": {
                "type": "string"
              },
              "certificateId": {
                "type": "string"
              },
              "dose": {
                "type": "string",
                "x-omitempty": false
              },
              "comorbidities": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "address": {
          "$id": "#/properties/address",
          "$ref": "Common.json#/definitions/Address",
          "title": "Address"
        },
        "comorbidities": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "_osConfig": {
    "osComment": ["This section contains the OpenSABER specific configuration information",
      "privateFields: Optional; list of field names to be encrypted and stored in database",
      "signedFields: Optional; list of field names that must be pre-signed",
      "indexFields: Optional; list of field names used for creating index. Enclose within braces to indicate it is a composite index. In this definition, (serialNum, facilityCode) is a composite index and facilityName is a single column index.",
      "uniqueIndexFields: Optional; list of field names used for creating unique index. Field names must be different from index field name",
      "systemFields: Optional; list of fields names used for system standard information like created, updated timestamps and userid"],

    "privateFields": [],
    "signedFields": [],
    "indexFields": ["(phone, code)"],
    "uniqueIndexFields": ["code"],
    "systemFields": ["osCreatedAt", "osUpdatedAt", "osCreatedBy", "osUpdatedBy"]
  }
}
